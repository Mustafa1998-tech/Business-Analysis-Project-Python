# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Explicitly declare files that should always have LF line endings
*.py text eol=lf
*.pyw text eol=lf
*.pyi text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.svg text eol=lf

# Windows-specific files that should have CRLF line endings
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
*.sh text eol=lf

# Binary files that should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.eot binary
*.ttf binary
*.woff binary
*.woff2 binary
*.zip binary
*.gz binary
*.bz2 binary
*.tar binary
*.exe binary
*.dll binary
*.pdb binary
*.so binary
*.dylib binary
*.a binary
*.lib binary
*.o binary
*.obj binary
*.pyc binary
*.pyo binary
*.pyd binary
*.db binary
*.sqlite3 binary
*.sqlite binary

# Virtual environment and build directories
venv/ export-ignore
env/ export-ignore
ENV/ export-ignore
.venv/ export-ignore
__pycache__/ export-ignore
*.egg-info/ export-ignore
build/ export-ignore
dist/ export-ignore
*.egg export-ignore

# Jupyter
.ipynb_checkpoints/ export-ignore

# IDE specific files
.idea/ export-ignore
.vscode/ export-ignore
*.swp export-ignore
*.swo export-ignore

# Environment files
.env export-ignore
.env.local export-ignore

# Logs
*.log export-ignore
*.pdb binary
*.so binary
*.dylib binary
*.a binary
*.lib binary
*.o binary
*.obj binary

# Explicitly declare files that should have CRLF line endings on checkout (Windows)
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
